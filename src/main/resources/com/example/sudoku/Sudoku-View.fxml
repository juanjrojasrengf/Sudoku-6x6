                <ColumnConstraints minWidth="50" prefWidth="50" maxWidth="50"/>
                <ColumnConstraints minWidth="50" prefWidth="50" maxWidth="50"/>
                <ColumnConstraints minWidth="50" prefWidth="50" maxWidth="50"/>
                <ColumnConstraints minWidth="50" prefWidth="50" maxWidth="50"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="50" prefHeight="50" maxHeight="50"/>
                <RowConstraints minHeight="50" prefHeight="50" maxHeight="50"/>
                <RowConstraints minHeight="50" prefHeight="50" maxHeight="50"/>
                <RowConstraints minHeight="50" prefHeight="50" maxHeight="50"/>
                <RowConstraints minHeight="50" prefHeight="50" maxHeight="50"/>
                <RowConstraints minHeight="50" prefHeight="50" maxHeight="50"/>
            </rowConstraints>

            <children>
                <!-- Generar las celdas 6x6 -->
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="5"/>

                <TextField GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="5"/>

                <TextField GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="4"/>
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="5"/>

                <TextField GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <TextField GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <TextField GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                <TextField GridPane.rowIndex="3" GridPane.columnIndex="4"/>
                <TextField GridPane.rowIndex="3" GridPane.columnIndex="5"/>

                <TextField GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="4"/>
                <TextField GridPane.rowIndex="4" GridPane.columnIndex="5"/>

                <TextField GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <TextField GridPane.rowIndex="5" GridPane.columnIndex="2"/>
                <TextField GridPane.rowIndex="5" GridPane.columnIndex="3"/>
                <TextField GridPane.rowIndex="5" GridPane.columnIndex="4"/>
                <TextField GridPane.rowIndex="5" GridPane.columnIndex="5"/>
            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Inicio" onAction="#handleStartGame"/>
            <Button text="Ayuda" onAction="#handleHelp"/>
            <Button text="GuÃ­a" onAction="#handleGuide"/>
        </HBox>
    </bottom>
</BorderPane>
