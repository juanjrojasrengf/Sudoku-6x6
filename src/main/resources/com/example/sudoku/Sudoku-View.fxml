<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sudoku.controller.SudokuController">

    <top>
        <Label text="SUDOKU 6x6" style="-fx-font-size: 24px;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
